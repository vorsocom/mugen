server {
    listen      80;
    server_name {SERVER_NAME};
    charset     utf-8;
    client_max_body_size 75M;

    location / { try_files $uri @gloria; }
    location @gloria {
              include   uwsgi_params;
              uwsgi_pass unix:///tmp/com.vorsocomputing.gloria.sock;
              uwsgi_buffering off;
    }
}
